<div class="show-block">
  <p class="show-memo-title"><span><%= "< #{@memos[@memo_index]["title"]} >" %></span></p>
  <p class="show-memo-content"><%= "#{@memos[@memo_index]["content"].gsub("\r\n", "<br>").gsub(" ", "&nbsp;")}" %></p>
</div>
<div class="form-buttons">
  <form class="action-memo" action=<%= %"/edit/#{params[:id]}" %> method="GET">
    <input class="form-button" type="submit" value="変更">
  </form>
  <form class="action-memo" action=<%= %"/delete/#{params[:id]}" %> method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input class="form-button" type="submit" value="削除">
  </form>
</div>
