<form class="save-memo" action=<%= "patch/#{params[:id]}" %> method="POST">
  <div class="title-block">
    <input class="title-input" required type="text" name="title" value=<%= "#{@memos[@memo_index]["title"]}" %>>
  </div>
  <div class="text-block">
    <textarea class="text-input" required name="content"><%= "#{@memos[@memo_index]["content"]}" %></textarea>
  </div>
  <input type="hidden" name="_method" value="PATCH">
  <div>
    <input class="save-button" type="submit" value="変更">
  </div>
</form>
